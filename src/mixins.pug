mixin tariff(title,list,price,bemBlock,i)
  -newBlock = 'tariff'
  if i === 1
    -mod = ' tariff-white'
  else if i === 2
    -mod = ' tariff-black'
  else
    -mod = ''
  div(class=`${bemBlock}` + newBlock + ` ${newBlock}` + mod)
    -bemBlock = `${newBlock}__`
    +img(`${bemBlock}` + 'light-center' + ' light', 'light/center', 'svg')
    div(class=`${bemBlock}` + 'title-container')
      if i !== 2
        div(class=`${bemBlock}` + 'title') #{title} <p>наставничество</p>
      else
         div(class=`${bemBlock}` + 'title') элита
    div(class=`${bemBlock}` + 'body')
      ul(class=`${bemBlock}` + 'list')
        each item in list
          li(class=`${bemBlock}` + 'list-item')= item
      div(class=`${bemBlock}` + 'footer')
        div(class=`${bemBlock}` + 'price')
          div(class=`${bemBlock}` + 'new-price')= price[0]
          div(class=`${bemBlock}` + 'old-price')= price[1]
        +linkButton(`${bemBlock}` + 'button' + ' default-button', 'Купить', '#') 