mixin img(className,src,format,alt,loading,tabIndex)
  if format!== 'svg'
    picture
      source(srcset=`assets/img/${src}.webp` type="image/webp")
      if alt!==' '
        if tabIndex === 0
          if loading === 'l'
            img(class=`${className}` src=`assets/img/${src}.${format}` alt=`${alt}` title=`${alt}` loading="lazy" tabindex="0")
          else
            img(class=`${className}` src=`assets/img/${src}.${format}` alt=`${alt}` title=`${alt}` tabindex="0")
        else
          if loading === 'l'
            img(class=`${className}` src=`assets/img/${src}.${format}` alt=`${alt}` title=`${alt}` loading="lazy")
          else
            img(class=`${className}` src=`assets/img/${src}.${format}` alt=`${alt}` title=`${alt}`)
      else
        if tabIndex === 0
          if loading === 'l'
            img(class=`${className}` src=`assets/img/${src}.${format}` alt=" " loading="lazy" tabindex="0")
          else
            img(class=`${className}` src=`assets/img/${src}.${format}` alt=" " tabindex="0")
        else
          if loading === 'l'
            img(class=`${className}` src=`assets/img/${src}.${format}` alt=" " loading="lazy")
          else
            img(class=`${className}` src=`assets/img/${src}.${format}` alt=" ")
  else
    if alt!==' '
      if tabIndex === 0
        if loading === 'l'
          img(class=`${className}` src=`assets/img/${src}.svg` alt=`${alt}` title=`${alt}` loading="lazy" tabindex="0")
        else
          img(class=`${className}` src=`assets/img/${src}.svg` alt=`${alt}` title=`${alt}` tabindex="0")
      else
        if loading === 'l'
          img(class=`${className}` src=`assets/img/${src}.svg` alt=`${alt}` title=`${alt}` loading="lazy")
        else
          img(class=`${className}` src=`assets/img/${src}.svg` alt=`${alt}` title=`${alt}`)
    else
      if tabIndex === 0
        if loading === 'l'
          img(class=`${className}` src=`assets/img/${src}.svg` alt=" " loading="lazy" tabindex="0")
        else
          img(class=`${className}` src=`assets/img/${src}.svg` alt=" " tabindex="0")
      else
        if loading === 'l'
          img(class=`${className}` src=`assets/img/${src}.svg` alt=" " loading="lazy")
        else
          img(class=`${className}` src=`assets/img/${src}.svg` alt=" ")
mixin linkButton(className,caption,link,target)
  form(action=`${link}`) 
    if target !== undefineted
      button(class=`${className}` target=`${target}`)= caption
    else
      button(class=`${className}`)= caption
mixin actionButton(className,caption,id)
  if id !== ' '
    button(class=`${className}` id= id)= caption
  else
    button(class=`${className}`)= caption
mixin logo(bemBlock)
  -newBlock = 'logo'
  div(class=`${bemBlock}` + newBlock + ` ${newBlock}`)
    +img(`${newBlock}` + '-img', 'logo', 'svg', 'logo')
    div(class=`${newBlock}` + '-txt') Acc Pool

mixin column(colTitle,colTxt,bemBlock)
  -newBlock = 'column'
  div(class=`${bemBlock}` + newBlock + ` ${newBlock}`)
    -colTitle.forEach(function callback(val, index) {
      -bemBlock = `${newBlock}__`
      div(class=`${bemBlock}` + 'block')
        div(class=`${bemBlock}` + 'title')=colTitle[index]
        div(class=`${bemBlock}` + 'txt')=colTxt[index]
      if index === 0
        span(class=`${bemBlock}` + 'line')
    -});

